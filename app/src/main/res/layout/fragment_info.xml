<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_main.Info"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvHalo"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Halo, GuysðŸ‘‹"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvAyo"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Ayo Cek Profil Dari Dhika Corp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHalo"/>

    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/ivOrang"
        android:layout_width="400dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toBottomOf="@id/tvAyo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/orang"/>

    <Button
        android:id="@+id/buttonCek"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek Sekarang !"
        android:backgroundTint="#448AFF"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivOrang"/>


</androidx.constraintlayout.widget.ConstraintLayout>
